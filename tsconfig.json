{
  "compilerOptions": {
    "target": "es2016",      
    "module": "commonjs",  
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,     
    "forceConsistentCasingInFileNames": true,  
    "strict": true,      
    "skipLibCheck": true,
    "outDir": "./dist"
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
